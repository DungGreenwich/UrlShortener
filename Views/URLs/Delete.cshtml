@model URLShortener.Models.URL

<!-- Delete button with confirmation & anti forgery token (POST) -->
<form asp-action="Delete" asp-route-id="@Model.Id" method="post" onsubmit="return confirm('Are you sure you want to delete \'@Model.ShortCode\' (@Model.OriginalUrl)?');">
	@Html.AntiForgeryToken()
	<button type="submit" class="btn btn-danger">Delete</button>
</form>